<section class="orders-show">

	<header class="page-header">
		<h1>Order #<%= @order.id %></h1>
	</header>

	<div class="order-summary jumbotron">
    <h4>Thank you <%= @order.email%> for your order!</h4>
		<p><b>Total Price: <%= humanized_money_with_symbol @order.total_cents / 100 %></b></p>
  </div>

	<h3>Order Details:</h3>
	<div class="panel panel-default items">
		<table class="table table-bordered">
			<thead>
				<tr>
					<th colspan="2">Product</th>
					<th>Description</th>
					<th>Quantity</th>
					<th>Price</th>
				</tr>
			</thead>
			<tbody>
				<% @order.line_items.product.each do |line_item| %>
					<%= render 'order_details', product: line_item[0].product, quantity: line_item[0][:quantity], total_price_cents: line_item[0][:total_price_cents]%>
				<% end %>
			</tbody>
			<tfoot>
						<tr>
							<th colspan="4">
								TOTAL:
							</th>
							<th>
								<%= humanized_money_with_symbol @order.total_cents / 100.0 %>
							</th>
						</tr>
					</tfoot>
		</table>
	</div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
